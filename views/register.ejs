<% layout('partials/boilerplate')%>

<h3>Welcome!</h3>
<h2 class="mb-5 text-bold">Register</h2>
<form
  id="loginForm"
  action="/register"
  method="post"
  class="d-flex flex-column align-items-center justify-content-center"
>
  <div class="mb-4 form-group w-100">
    <label class="mb-3" for="username">User name</label>
    <input
      type="text"
      name="username"
      id="username"
      class="form-control px-4 py-3"
      placeholder="Enter your user name"
    />
  </div>
  <div class="mb-4 form-group w-100">
    <label class="mb-3" for="email">Email</label>
    <input
      type="email"
      name="email"
      id="email"
      class="form-control px-4 py-3"
      placeholder="Enter your Email"
    />
  </div>

  <div class="mb-4 form-group w-100">
    <label class="mb-3" for="password">Password</label>
    <input
      type="password"
      name="password"
      id="password"
      class="form-control px-4 py-3"
      placeholder="Enter your Password"
    />
  </div>

  <button type="submit" class="mb-4 w-100 px-4 py-3">Register</button>
  <p class="text-muted align-self-center">
    Already have an Account?
    <b><a class="text-dark text-decoration-none" href="/login">Sign In</a></b>
  </p>
</form>
